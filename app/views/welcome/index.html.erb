<div class="container" style="margin-top: 100px;">
	<div class="bs-component">
		<div class="jumbotron" style="overflow: hidden;">
			<div class="col-lg-5">
				<h1>Collage</h1>
				<p>.zip file full of pics goes in, collage comes out.</p>
				<p><em>Limit 100 images per .zip</em></p>
				<p><a href="https://github.com/jsrn/Collage" target="_blank"><i class="fa fa-github"></i> Fork me!</a></p>
			</div>
			
			<div class="col-lg-5">
				<form class="form-horizontal" action="/upload" method="POST" enctype="multipart/form-data">
					<fieldset>
						<div class="form-group">
							<label for="password" class="col-lg-2 control-label">Upload file</label>
							<div class="col-lg-10">
								<input type="file" class="form-control" id="zipfile" name="zipfile" placeholder="Your password">
							</div>
						</div>
	
						<div class="form-group">
							<div class="col-lg-10 col-lg-offset-2">
								<button type="submit" class="btn btn-primary">Give me my collage!</button>
							</div>
						</div>
					</fieldset>
					<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %> 
				</form>
			</div>
		</div>
		<% if flash[:upload_failed] %>
		<div class="alert alert-danger" role="alert">
			There was a problem uploading your file.
		</div>
		<% end %>
		<% if flash[:no_file_selected] %>
		<div class="alert alert-warning" role="alert">
			You need to select a file to upload.
		</div>
		<% end %>
	</div>
</div>